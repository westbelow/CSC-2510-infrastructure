---
# tasks file for apache2
- hosts: all
  become: yes

  tasks:
  - name: Install Python
    ansible.builtin.package:
       name: python-apt
       state: present
  - name: Install Apache
    ansible.builtin.package:
       name: apache2
       state: present
  - name: Copy apache2.conf
    ansible.builtin.copy:
       src: apache2.conf
       dest: /etc/apache2.conf
  - name: Copy index.html
    ansible.builtin.copy:
       src: index.html
       dest: /etc/index.html
  - name: Symbolic Link
    ansible.builtin.file:
       src: /etc/apache2/mods-available/headers.load
       dest: /etc/apache2/mods-enabled/headers.load
       state: link
  - name: install other packages
    ansible.builtin.package:
       name: php
       state: present
  - name: install other packages
    ansible.builtin.package:
       name: libapache2-mod-php
       state: present
  - name: install other packages
    ansible.builtin.package:
       name: php-mysql
       state: present


    

